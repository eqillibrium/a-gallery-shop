<form action="/add" method="post">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title">Название картины</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="2">
        <label for="price">Стоимость картины</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input id="image" name="image"  type="text" class="validate" required min="2">
        <label for="image">Ссылка на изображение</label>
        <span class="helper-text" data-error="Укажите ссылку"></span>
    </div>

    <button type="submit" class="btn btn-primary">Добавить картину</button>
</form>
